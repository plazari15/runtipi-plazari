{
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "blinko-website",
      "image": "blinkospace/blinko:1.4.0",
      "isMain": true,
      "internalPort": 1111,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "NEXTAUTH_SECRET",
          "value": "${NEXTAUTH_SECRET}"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/postgres"
        },
        {
          "key": "NEXTAUTH_URL",
          "value": "${NEXTAUTH_URL}"
        },
        {
          "key": "NEXT_PUBLIC_BASE_URL",
          "value": "${NEXT_PUBLIC_BASE_URL}"
        }
      ],
      "dependsOn": ["postgres"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/blinko",
          "containerPath": "/app/.blinko"
        }
      ]
    },
    {
      "name": "postgres",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "postgres"
        },
        {
          "key": "POSTGRES_USER",
          "value": "postgres"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${POSTGRES_PASSWORD}"
        },
        {
          "key": "TZ",
          "value": "America/Sao_Paulo"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}
